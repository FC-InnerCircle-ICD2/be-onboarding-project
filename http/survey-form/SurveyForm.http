# Survey Form 을 생성
POST localhost:8080/api/v1/surveys HTTP/1.1
Host: localhost:8080
Content-Type: application/json

{
  "title": "여행 선호도 조사",
  "description": "여행 선호도를 조사합니다.",
  "surveyItems": [
    {
      "name": "아이템 1",
      "type": "SINGLE_SELECT",
      "description": "가장 좋아하는 여행지는 어디인가요?",
      "isRequired": true,
      "options": [
        { "name": "제주도" },
        { "name": "부산" },
        { "name": "서울" },
        { "name": "강원도" }
      ]
    },
    {
      "name": "아이템 2",
      "type": "MULTIPLE_SELECT",
      "description": "여행 시 중요하게 생각하는 요소를 선택해주세요.",
      "isRequired": true,
      "options": [
        { "name": "숙소" },
        { "name": "음식" },
        { "name": "관광지" },
        { "name": "액티비티" },
        { "name": "교통편" }
      ]
    },
    {
      "name": "아이템 3",
      "type": "SHORT_ANSWER",
      "description": "가장 기억에 남는 여행은 무엇인가요?",
      "isRequired": false,
      "options": []
    },
    {
      "name": "아이템 4",
      "type": "LONG_ANSWER",
      "description": "여행 중 겪었던 재미있는 경험을 공유해주세요.",
      "isRequired": false,
      "options": []
    }
  ]
}

